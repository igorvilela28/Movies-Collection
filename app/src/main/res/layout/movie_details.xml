<android.support.v7.widget.CardView
    android:id="@+id/movie_item_container"
    style="@style/Base.CardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/keyline_1"
    android:layout_marginBottom="@dimen/keyline_1"
    tools:layout_margin="@dimen/item_spacing_full">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/keyline_1_minus_8dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_movie_overview_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_spacing_normal"
            android:text="@string/title_details"
            style="@style/MovieDetailSectionHeader"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_dropdown_divider_color" />

        <TextView
            android:id="@+id/txt_movie_cast_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1_minus_8dp"
            android:text="@string/title_director"
            style="@style/smallTitleText"/>

        <TextView
            android:id="@+id/txt_movie_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_spacing_full"
            android:text="@string/place_holder_director"
            style="@style/ContentText"/>

        <TextView
            android:id="@+id/txt_movie_cast_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1_minus_8dp"
            android:text="@string/title_cast"
            style="@style/smallTitleText"/>

        <TextView
            android:id="@+id/txt_movie_cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_spacing_full"
            android:text="@string/place_holder_cast"
            style="@style/ContentText"/>

        <TextView
            android:id="@+id/txt_movie_writers_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1_minus_8dp"
            android:text="@string/title_writers"
            style="@style/smallTitleText"/>

        <TextView
            android:id="@+id/txt_movie_writers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_spacing_full"
            android:text="@string/place_holder_writers"
            style="@style/ContentText"/>


        <TextView
            android:id="@+id/txt_movie_genre_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1_minus_8dp"
            android:text="@string/title_genre"
            style="@style/smallTitleText"/>

        <TextView
            android:id="@+id/txt_movie_genre2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_spacing_full"
            android:text="@string/place_holder_genre"
            style="@style/ContentText"/>

        <TextView
            android:id="@+id/txt_movie_language_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1_minus_8dp"
            android:text="@string/title_language"
            style="@style/smallTitleText"/>

        <TextView
            android:id="@+id/txt_movie_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_spacing_full"
            android:text="@string/place_holder_language"
            style="@style/ContentText"/>

        <TextView
            android:id="@+id/txt_movie_country_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1_minus_8dp"
            android:text="@string/title_country"
            style="@style/smallTitleText"/>

        <TextView
            android:id="@+id/txt_movie_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_spacing_full"
            android:text="@string/place_holder_country"
            style="@style/ContentText"/>

        <TextView
            android:id="@+id/txt_movie_released_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1_minus_8dp"
            android:text="@string/title_released"
            style="@style/smallTitleText"/>

        <TextView
            android:id="@+id/txt_movie_released"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_spacing_full"
            android:text="@string/place_holder_released"
            style="@style/ContentText"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
